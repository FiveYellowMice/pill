<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.title | xml_escape }}</title>
		<description>{{ site.description | xml_escape }}</description>
		<link>{{ site.url }}/</link>
		<atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml" />
		<pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
		<lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
		<generator>Jekyll v{{ jekyll.version }}</generator>
		{% for pill in site.pills reversed %}
		<item>
			<title>{{ pill.thing | append: " ËçØ‰∏∏ üíä " | append: pill.title | xml_escape }}</title>
			<description>
				{{ pill.content | xml_escape }}
				{% if pill.sources %}
				&lt;h2&gt;Êñ∞ÈóªÊù•Ê∫ê&lt;/h2&gt;
				&lt;ul&gt;
					{% for source in pill.sources %}
					&lt;li&gt;&lt;a href=&quot;{{ source.url | xml_escape }}&quot;&gt;{{ source.title | xml_escape }}&lt;/a&gt;&lt;/li&gt;
					{% endfor %}
				&lt;/ul&gt;
				{% endif %}
			</description>
			<pubDate>{{ pill.date | date_to_rfc822 }}</pubDate>
			<link>{{ site.url }}{{ pill.url }}</link>
			<guid isPermaLink="true">{{ site.url }}{{ pill.url }}</guid>
		</item>
		{% endfor %}
	</channel>
</rss>
